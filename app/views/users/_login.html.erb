<%= form_with(model:user, url: "/auth", method: :post) do |form| %>

  <div class="divider d-flex align-items-center my-4">
    <p class="text-center fw-bold mx-3 mb-0 display-4">Login</p>
  </div>

  <div class="form-outline mb-4">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control form-control-lg", placeholder:"Coloque seu e-mail" %>
  </div>

  <div class="form-outline mb-3">
    <%= form.label :password %>
    <%= form.password_field  :password, class: "form-control form-control-lg", placeholder:"Coloque sua senha "%>
  </div>

  <% if @errors %>
    <div class="mt-4 text-danger">
      <ul>
        <li><%= @errors %></li>
      </ul>
    </div>
  <% end %>

  <div class="d-flex justify-content-between align-items-center">
    <div class="form-check mb-0">
      <input class="form-check-input me-2" type="checkbox" value="" id="rememberMe" />
      <label class="form-check-label" for="rememberMe">
        Lembra-me
      </label>
    </div>
    <a href="#!" class="text-body">Esqueceu a senha?</a>
  </div>

  <div class="text-center text-lg-start mt-4 pt-2">
    <%= form.submit "Login", class: "btn btn-primary btn-lg pl-2 pr-2" %>
    <p class="small fw-bold mt-2 pt-1 mb-0">JÃ¡ tem uma conta?
      <%= link_to "Criar conta", register_path %>
    </p>
  </div>

<% end %>
