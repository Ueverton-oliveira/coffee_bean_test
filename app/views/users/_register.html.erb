<%= form_with(model: user) do |form| %>
  <div class="divider d-flex align-items-center my-4">
    <p class="text-center fw-bold mx-3 mb-0 display-4">Registrar</p>
  </div>

  <div class="form-outline mb-4">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control form-control-lg", placeholder: "Nome completo" %>
  </div>

  <div class="form-outline mb-4">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control form-control-lg", placeholder:"Seu melhor e-mail" %>
  </div>

  <div class="form-outline mb-3">
    <%= form.label :password %>
    <%= form.password_field  :password, class: "form-control form-control-lg", placeholder:"Senha"%>
  </div>

  <div class="d-flex justify-content-between align-items-center">
    <div class="form-check mb-0">
      <input class="form-check-input me-2" type="checkbox" value="" id="rememberMe" />
      <label class="form-check-label" for="rememberMe">
        Lembre-me
      </label>
    </div>
    <a href="#!" class="text-body">Esqueceu a senha?</a>
  </div>

  <% if user.errors.any? %>
    <div class="mt-4 text-danger">
      <h4><%= pluralize(user.errors.count, "erros") %> ,usuário não pode ser salvo:</h2>

        <ul>
          <% user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
    </div>
  <% end %>

  <div class="text-center text-lg-start mt-4 pt-2">
    <%= form.submit class: "btn btn-primary btn-lg pl-2 pr-2" %>
    <p class="small fw-bold mt-2 pt-1 mb-0">Já tem uma conta?
      <%= link_to "Login", users_path  %>
    </p>
  </div>

<% end %>
